<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-devise'}) do |f| %>
  <h2 class="form-signin-heading">Student/Teacher Portal Sign up</h2>
  <%= devise_error_messages! %>

  <div class='form-group'>
    <%= f.label :first_name, 'First Name' %>
    <%= f.text_field :first_name, class: 'form-control', placeholder: 'First Name', required: true, autofocus: true %>
  </div>

  <div class='form-group'>
    <%= f.label :last_name, 'Last Name' %>
    <%= f.text_field :last_name, class: 'form-control', placeholder: 'Last Name', required: true%>
  </div>

  <div class='form-group'>
    <%= f.label :email, 'Email address' %>
    <%= f.text_field :email, class: 'form-control', placeholder: 'bill@example.com', required: true %>
  </div>

  <div class='form-group'>
    <%= f.label :password, 'Password'%>
    <% if @validatable %>
     <em>(<%= @minimum_password_length %> characters minimum)</em>
    <%= f.password_field :password, class: 'form-control', placeholder: 'Password', required: true, autocomplete: "off" %>
    <% end %>
  </div>

  <div class='form-group'>
    <%= f.label :password_confirmation, 'Password Confirmation' %>
    <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Password Confirmation', required: true, autocomplete: "off" %>
  </div>

  <%= f.submit "Sign up", class: "btn btn-lg btn-primary btn-block" %>
<% end %>

<%= render "users/shared/links" %>
